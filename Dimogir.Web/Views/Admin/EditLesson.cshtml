@model Dimogir.Web.ViewModels.LessonEditViewModel

@using (Html.BeginForm("CreateOrUpdateLesson", "Admin", FormMethod.Post, new Dictionary<string, object> { { "class", "form-horizontal" }, {"id", "add-lesson-form"} }))
{
    <h1>Добавление урока</h1>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Категория
        </label>
        <div class="col-sm-10">
            <select name="@nameof(Model.CategoryId).ToLowerInvariant()">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Key">@category.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Родительский урок
        </label>
        <div class="col-sm-10">
            <select name="@nameof(Model.ParentId).ToLowerInvariant()">
                @foreach (var lesson in Model.Lessons)
                {
                    <option value="@lesson.Key">@lesson.Title</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Заголовок
        </label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Title, new Dictionary<string, object> {{"class", "form-control"}})
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Описание
        </label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Description, new Dictionary<string, object> {{"class", "form-control"}})
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Текст урока
        </label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Body, new Dictionary<string, object> {{"class", "form-control tinymce-control"}})
        </div>
    </div>

    <input type="submit"/>
}