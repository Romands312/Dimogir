@model Dimogir.Web.ViewModels.CategoryEditViewModel
    
@using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post, new Dictionary<string, object> { { "class", "form-horizontal" }, { "id", "add-category-form" } }))
{
    <h1>Добавление категории</h1>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Имя
        </label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new Dictionary<string, object> {{"class", "form-control"}})
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Ключ
        </label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Id, new Dictionary<string, object> { { "class", "form-control" } })
        </div>
    </div>
    
    <input type="submit" />
}